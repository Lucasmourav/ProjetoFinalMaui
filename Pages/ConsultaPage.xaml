<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoFinalMauiReal.Pages.ConsultaPage"
             Title="Consulta">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Histórico" Priority="0" Order="Primary" Clicked="OnHistoricoClicked" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Cidade"/>
        <Entry Text="{Binding Cidade}" Placeholder="Ex: São Paulo"/>
        <Button Text="Consultar" Command="{Binding ConsultarCommand}"/>
        <Frame Padding="12" BorderColor="LightGray">
            <Label Text="{Binding Resultado}"/>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
