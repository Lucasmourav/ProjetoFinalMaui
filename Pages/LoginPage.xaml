<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoFinalMauiReal.Pages.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Email"/>
        <Entry Text="{Binding Email}" Keyboard="Email" Placeholder="seu@email.com"/>

        <Label Text="Senha"/>
        <Entry Text="{Binding Senha}" IsPassword="True" Placeholder="sua senha"/>

        <Button Text="Entrar" Command="{Binding EntrarCommand}"/>
        <Button Text="Criar conta" Command="{Binding IrParaCadastroCommand}"/>
    </VerticalStackLayout>
</ContentPage>
