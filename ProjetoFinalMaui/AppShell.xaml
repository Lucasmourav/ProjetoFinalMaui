<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjetoFinalMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjetoFinalMaui"
    xmlns:views="clr-namespace:ProjetoFinalMaui.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Previsão do Tempo">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" 
              BackgroundColor="{DynamicResource Primary}"
              Padding="20">
            <Label x:Name="UserNameLabel"
                   Text="Bem-vindo!"
                   TextColor="White"
                   FontSize="24"
                   VerticalOptions="Center"/>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Previsão do Tempo" Icon="weather">
        <ShellContent
            ContentTemplate="{DataTemplate views:WeatherPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Histórico" Icon="history">
        <ShellContent
            ContentTemplate="{DataTemplate views:HistoricoPage}"/>
    </FlyoutItem>

    <MenuItem Text="Sair"
              Clicked="OnLogoutClicked"/>

</Shell>
