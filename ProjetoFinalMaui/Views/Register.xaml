<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoFinalMaui.Views.Register"
             Title="Cadastro">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="20">
            <Label 
                Text="Cadastro de UsuÃ¡rio"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry 
                x:Name="NomeEntry"
                Placeholder="Nome"
                Text="{Binding Nome}"/>

            <DatePicker 
                x:Name="DataNascimentoPicker"
                Date="{Binding DataNascimento}"/>

            <Entry 
                x:Name="EmailEntry"
                Placeholder="Email"
                Keyboard="Email"
                Text="{Binding Email}"/>

            <Entry 
                x:Name="SenhaEntry"
                Placeholder="Senha"
                IsPassword="True"
                Text="{Binding Senha}"/>

            <Button 
                x:Name="CadastrarButton"
                Text="Cadastrar"
                SemanticProperties.Hint="Clique para se cadastrar"
                Clicked="OnCadastrarClicked"
                HorizontalOptions="Center" />

            <Label 
                x:Name="MessageLabel"
                TextColor="Red"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>