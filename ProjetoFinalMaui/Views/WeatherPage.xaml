<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoFinalMaui.Views.WeatherPage"
             Title="PrevisÃ£o do Tempo">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="20">
            <Entry x:Name="CidadeEntry"
                   Placeholder="Digite o nome da cidade"
                   HorizontalOptions="Fill"/>

            <Button Text="Consultar"
                    Clicked="OnConsultarClicked"
                    HorizontalOptions="Center"/>

            <Frame IsVisible="false"
                   x:Name="ResultadoFrame"
                   Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="CidadeLabel"
                           FontSize="24"
                           HorizontalOptions="Center"/>

                    <Label x:Name="TemperaturaLabel"
                           FontSize="48"
                           HorizontalOptions="Center"/>

                    <Label x:Name="CondicaoLabel"
                           FontSize="20"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Label x:Name="MessageLabel"
                   TextColor="Red"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>